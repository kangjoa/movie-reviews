<h1>Reviews</h1>

<div class="row row-cols-1 row-cols-md-3 g-4">
  {{#each reviews}}
    {{#if this.title}}
      <div class="col mb-1">
        <div class="card h-100 d-flex flex-column">
          <div class="card-body d-flex flex-column">
            <h5 class="card-title flex-fill"><a href="/reviews/{{this._id}}">{{this.title}}</a></h5>
            <p class="card-text flex-fill"><small class="text-muted">{{this.movieTitle}}</small></p>
          </div>
        </div>
      </div>
    {{/if}}
  {{/each}}
</div>
